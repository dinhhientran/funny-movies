<div class="row mt-5 d-flex justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header">
        Share a Youtube movie
      </div>
      <div class="card-body">
          <%= form_tag share_path, :method => :post, :class => 'my-2 my-lg-0' do %>
            <% if flash[:alert] %>
              <div class="row">
                <div class="col-md-12">
                  <div class="alert alert-danger mt-2" role="alert">
                    <% flash[:alert].each do |k,m| %>
                      <div><%= m.first %></div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
            <div class="row">
              <div class="col-md-3"><label><%= "Youtube URL:" %></label></div>
              <div class="col-md-9"><%= text_field_tag :youtube_url, "", :required => true, :placeholder => '', 'aria-label' => 'Youtube URL', :class => 'form-control mr-sm-2' %></div>
            </div>
            <div class="row mt-3">
              <div class="col-md-3"></div>
              <div class="col-md-9">
                <%= submit_tag "Share", :class => 'btn btn-primary my-2 my-sm-0', :style => "width:100%" %>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>