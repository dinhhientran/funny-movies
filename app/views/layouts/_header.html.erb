<nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-between">
  <a class="navbar-brand" href="/"><h1><i class="fas fa-home"></i> Funny Movies</h1></a>
  <% if current_user %>
    <div>
      <span>Welcome <%= current_user.email %></span>
      <a class="btn btn-outline-info my-2 my-sm-0 ml-3" href="">Share a movie</a>
      <a class="btn btn-outline-info my-2 my-sm-0 ml-3" href="<%= logout_path %>">Log out</a>
    </div>
    <% else %>
    <div>
      <div>
        <%= form_tag login_path, :method => :post, :class => 'form-inline my-2 my-lg-0' do %>
          <%= text_field_tag :email, "", :required => true, :placeholder => 'Email', 'aria-label' => 'Email', :class => 'form-control mr-sm-2' %>
          <%= password_field_tag :password, "", :required => true, :placeholder => 'Password', 'aria-label' => 'Password', :class => 'form-control mr-sm-2' %>
          <%= submit_tag "Login / Register", :class => 'btn btn-outline-info my-2 my-sm-0' %>
        <% end %>
      </div>
      <% if flash[:alert] %>
        <div class="alert alert-danger mt-2" role="alert">
          <% flash[:alert].each do |k,m| %>
            <%= m.first %>
          <% end %>
        </div>
      <%end %>
    </div>
  <% end %>
</nav>